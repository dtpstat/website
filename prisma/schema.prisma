generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id           Int        @id @default(autoincrement())
  text         String?
  createDate   DateTime?  @db.Date
  authorId     String     @db.VarChar
  author       User       @relation(fields: [authorId], references: [auth0userSub])
}

model User {
  @@id([auth0userSub])
  name         String?
  email        String?
  avatarUrl    String?
  auth0userSub String     @db.VarChar
  comments     Comment[]
}